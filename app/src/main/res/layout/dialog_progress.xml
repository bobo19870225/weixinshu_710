<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_progress_root_view"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:gravity="center"
    android:background="@drawable/backgrond_dialog"
    >


    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iv_progress"
        android:src="@mipmap/ic_svstatus_loading"
        />

    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="55dp"
        android:layout_height="55dp"
        />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/iv_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="加载中..."
        android:maxLines="1"
        android:textSize="18dp"
        android:textColor="#222222"
        android:gravity="center"
        android:id="@+id/custom_imageview_progress_title"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>